{
  "name": "light-classnames",
  "version": "0.0.1",
  "description": "A light implementation of the classnames package with typescript support",
  "author": "shahar avni",
  "contributors": [
    "yehuda goldberg"
  ],
  "license": "MIT",
  "main": "dist/bundle.cjs.js",
  "module": "dist/bundle.esm.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npm run clean && npm run transpile",
    "clean": "rimraf dist/",
    "prepack": "npm build",
    "test": "jest",
    "transpile": "rollup -c rollup.config.js",
    "transpile:sourcemap": "rollup -c rollup.config.js --sourcemap",
    "watch": "rollup --c rollup.config.js --watch --sourcemap"
  },
  "keywords": [
    "classnames",
    "class"
  ],
  "devDependencies": {
    "@rollup/plugin-typescript": "^8.3.0",
    "@types/jest": "^27.0.1",
    "jest": "^27.3.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.58.0",
    "ts-jest": "^27.0.7",
    "tslib": "^2.3.1",
    "typescript": "^4.4.4"
  }
}
